<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.seig.backend.system.mapper.UserMapper">

    <resultMap id="UserResultMap" type="com.seig.backend.system.entity.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="password_hash" property="passwordHash"/>
        <result column="account_status" property="accountStatus"/>
        <result column="role" property="role"/>
        <result column="nickname" property="nickname"/>
        <result column="real_name" property="realName"/>
        <result column="avatar_url" property="avatarUrl"/>
        <result column="gender" property="gender"/>
        <result column="birthday" property="birthday"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="last_login_at" property="lastLoginAt"/>
        <result column="deleted_at" property="deletedAt"/>
    </resultMap>

    <select id="selectByUsername" resultMap="UserResultMap">
        SELECT *
        FROM users
        WHERE username = #{username}
          AND deleted_at IS NULL
    </select>

    <select id="selectById" resultMap="UserResultMap">
        SELECT *
        FROM users
        WHERE id = #{id}
          AND deleted_at IS NULL
    </select>

    <insert id="insert" parameterType="com.seig.backend.system.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (
            username, email, phone, password_hash, account_status,
            nickname, real_name, avatar_url, gender, birthday,
            created_at, updated_at
        ) VALUES (
                     #{username}, #{email}, #{phone}, #{passwordHash}, #{accountStatus},
                     #{nickname}, #{realName}, #{avatarUrl}, #{gender}, #{birthday},
                     NOW(), NOW()
                 )
    </insert>

    <update id="updateById" parameterType="com.seig.backend.system.entity.User">
        UPDATE users
        SET
            username = #{username},
            email = #{email},
            phone = #{phone},
            password_hash = #{passwordHash},
            account_status = #{accountStatus},
            role = #{role},
            nickname = #{nickname},
            real_name = #{realName},
            avatar_url = #{avatarUrl},
            gender = #{gender},
            birthday = #{birthday},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

</mapper>
